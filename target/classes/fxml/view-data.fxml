<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.accounting.controller.ViewDataController" spacing="20.0" styleClass="content-pane" nodeOrientation="RIGHT_TO_LEFT">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label styleClass="page-title" text="عرض البيانات" />
      <HBox alignment="CENTER_RIGHT" spacing="15.0" styleClass="filter-bar">
         <children>
            <Label styleClass="form-label" text="من تاريخ:" />
            <DatePicker fx:id="fromDatePicker" />
            <Label styleClass="form-label" text="إلى تاريخ:" />
            <DatePicker fx:id="toDatePicker" />
            <Button fx:id="filterBtn" onAction="#applyFilter" styleClass="primary-button" text="تطبيق الفلتر" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
         <tabs>
            <Tab text="المبيعات">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <TableView fx:id="salesTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="salesEmployeeCol" prefWidth="120.0" text="الموظف" />
                              <TableColumn fx:id="salesAmountCol" prefWidth="100.0" text="المبلغ" />
                              <TableColumn fx:id="salesDateCol" prefWidth="80.0" text="التاريخ" />
                              <TableColumn fx:id="salesTimeCol" prefWidth="60.0" text="الوقت" />
                              <TableColumn fx:id="salesNotesCol" prefWidth="150.0" text="ملاحظات" />
                              <TableColumn fx:id="salesActionCol" prefWidth="80.0" text="إجراءات" />
                           </columns>
                        </TableView>
                        <Label fx:id="salesTotalLabel" styleClass="total-label" text="الإجمالي: $0.00" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="المصروفات">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <TableView fx:id="expensesTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="expensesEmployeeCol" prefWidth="120.0" text="الموظف" />
                              <TableColumn fx:id="expensesAmountCol" prefWidth="100.0" text="المبلغ" />
                              <TableColumn fx:id="expensesDateCol" prefWidth="80.0" text="التاريخ" />
                              <TableColumn fx:id="expensesTimeCol" prefWidth="60.0" text="الوقت" />
                              <TableColumn fx:id="expensesNotesCol" prefWidth="150.0" text="ملاحظات" />
                              <TableColumn fx:id="expensesActionCol" prefWidth="80.0" text="إجراءات" />
                           </columns>
                        </TableView>
                        <Label fx:id="expensesTotalLabel" styleClass="total-label" text="الإجمالي: $0.00" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="الأرباح">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <TableView fx:id="profitsTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="profitsEmployeeCol" prefWidth="120.0" text="الموظف" />
                              <TableColumn fx:id="profitsAmountCol" prefWidth="100.0" text="المبلغ" />
                              <TableColumn fx:id="profitsDateCol" prefWidth="80.0" text="التاريخ" />
                              <TableColumn fx:id="profitsTimeCol" prefWidth="60.0" text="الوقت" />
                              <TableColumn fx:id="profitsNotesCol" prefWidth="150.0" text="ملاحظات" />
                              <TableColumn fx:id="profitsActionCol" prefWidth="80.0" text="إجراءات" />
                           </columns>
                        </TableView>
                        <Label fx:id="profitsTotalLabel" styleClass="total-label" text="الإجمالي: $0.00" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="الملخص">
               <content>
                  <VBox alignment="CENTER" spacing="30.0" styleClass="summary-container">
                     <children>
                        <GridPane alignment="CENTER" hgap="50.0" vgap="20.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label styleClass="summary-label" text="إجمالي المبيعات:" />
                              <Label fx:id="summaryTotalSales" styleClass="summary-value positive" text="0.00" GridPane.columnIndex="1" />
                              <Label styleClass="summary-label" text="إجمالي المصروفات:" GridPane.rowIndex="1" />
                              <Label fx:id="summaryTotalExpenses" styleClass="summary-value negative" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label styleClass="summary-label" text="إجمالي الأرباح:" GridPane.rowIndex="2" />
                              <Label fx:id="summaryTotalProfits" styleClass="summary-value positive" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <Separator GridPane.columnSpan="2" GridPane.rowIndex="3" />
                           </children>
                        </GridPane>
                        <HBox alignment="CENTER" spacing="20.0">
                           <children>
                              <Label styleClass="net-profit-label" text="صافي الربح:" />
                              <Label fx:id="summaryNetProfit" styleClass="net-profit-value" text="0.00" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</VBox>