<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.accounting.controller.DataEntryController" spacing="20.0" styleClass="content-pane" nodeOrientation="RIGHT_TO_LEFT">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label styleClass="page-title" text="إدخال البيانات" />
      <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab text="المبيعات">
               <content>
                  <VBox spacing="15.0" styleClass="form-container">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <GridPane hgap="15.0" vgap="15.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="150.0" maxWidth="200.0" />
                              <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="350.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="NEVER" />
                              <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="NEVER" />
                              <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="NEVER" />
                              <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="NEVER" />
                           </rowConstraints>
                           <children>
                              <Label styleClass="form-label" text="الموظف:" GridPane.valignment="CENTER" />
                              <ComboBox fx:id="salesEmployeeCombo" maxWidth="Infinity" promptText="اختر الموظف" GridPane.columnIndex="1" GridPane.valignment="CENTER" />
                              <Label styleClass="form-label" text="المبلغ:" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                              <TextField fx:id="salesAmountField" maxWidth="Infinity" promptText="أدخل المبلغ" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                              <Label styleClass="form-label" text="التاريخ:" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                              <DatePicker fx:id="salesDatePicker" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                              <Label styleClass="form-label" text="الوقت:" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                              <TextField fx:id="salesTimeField" maxWidth="Infinity" promptText="HH:MM" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                           </children>
                        </GridPane>
                        <VBox spacing="10.0">
                           <children>
                              <Label styleClass="form-label" text="ملاحظات:" />
                              <TextArea fx:id="salesNotesArea" prefRowCount="3" maxHeight="80.0" promptText="أدخل الملاحظات (اختياري)" />
                           </children>
                        </VBox>
                        <HBox alignment="CENTER" spacing="15.0">
                           <children>
                              <Button fx:id="saveSalesBtn" onAction="#saveSales" prefWidth="120.0" styleClass="primary-button" text="حفظ" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="المصروفات">
               <content>
                  <VBox spacing="15.0" styleClass="form-container">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <GridPane hgap="15.0" vgap="15.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="150.0" maxWidth="200.0" />
                              <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="350.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="NEVER" />
                              <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="NEVER" />
                              <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="NEVER" />
                              <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="NEVER" />
                           </rowConstraints>
                           <children>
                              <Label styleClass="form-label" text="الموظف:" GridPane.valignment="CENTER" />
                              <ComboBox fx:id="expensesEmployeeCombo" maxWidth="Infinity" promptText="اختر الموظف" GridPane.columnIndex="1" GridPane.valignment="CENTER" />
                              <Label styleClass="form-label" text="المبلغ:" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                              <TextField fx:id="expensesAmountField" maxWidth="Infinity" promptText="أدخل المبلغ" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                              <Label styleClass="form-label" text="التاريخ:" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                              <DatePicker fx:id="expensesDatePicker" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                              <Label styleClass="form-label" text="الوقت:" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                              <TextField fx:id="expensesTimeField" maxWidth="Infinity" promptText="HH:MM" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                           </children>
                        </GridPane>
                        <VBox spacing="10.0">
                           <children>
                              <Label styleClass="form-label" text="ملاحظات:" />
                              <TextArea fx:id="expensesNotesArea" prefRowCount="3" maxHeight="80.0" promptText="أدخل الملاحظات (اختياري)" />
                           </children>
                        </VBox>
                        <HBox alignment="CENTER" spacing="15.0">
                           <children>
                              <Button fx:id="saveExpensesBtn" onAction="#saveExpenses" prefWidth="120.0" styleClass="primary-button" text="حفظ" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="الأرباح">
               <content>
                  <VBox spacing="15.0" styleClass="form-container">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <GridPane hgap="15.0" vgap="15.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="150.0" maxWidth="200.0" />
                              <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="350.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="NEVER" />
                              <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="NEVER" />
                              <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="NEVER" />
                              <RowConstraints minHeight="35.0" prefHeight="40.0" vgrow="NEVER" />
                           </rowConstraints>
                           <children>
                              <Label styleClass="form-label" text="الموظف:" GridPane.valignment="CENTER" />
                              <ComboBox fx:id="profitsEmployeeCombo" maxWidth="Infinity" promptText="اختر الموظف" GridPane.columnIndex="1" GridPane.valignment="CENTER" />
                              <Label styleClass="form-label" text="المبلغ:" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                              <TextField fx:id="profitsAmountField" maxWidth="Infinity" promptText="أدخل المبلغ" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                              <Label styleClass="form-label" text="التاريخ:" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                              <DatePicker fx:id="profitsDatePicker" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                              <Label styleClass="form-label" text="الوقت:" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                              <TextField fx:id="profitsTimeField" maxWidth="Infinity" promptText="HH:MM" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                           </children>
                        </GridPane>
                        <VBox spacing="10.0">
                           <children>
                              <Label styleClass="form-label" text="ملاحظات:" />
                              <TextArea fx:id="profitsNotesArea" prefRowCount="3" maxHeight="80.0" promptText="أدخل الملاحظات (اختياري)" />
                           </children>
                        </VBox>
                        <HBox alignment="CENTER" spacing="15.0">
                           <children>
                              <Button fx:id="saveProfitsBtn" onAction="#saveProfits" prefWidth="120.0" styleClass="primary-button" text="حفظ" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</VBox>